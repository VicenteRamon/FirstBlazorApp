
@page "/bloco"

<style>
    .card {
        width: 200px;
        height: 150px;
        border: 1px solid #ccc;
        margin: 10px;
        perspective: 1000px;
    }

    .card-inner {
        width: 100%;
        height: 100%;
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }

    .card:hover .card-inner {
        transform: rotateY(180deg);
    }

    .card-front,
    .card-back {
        width: 100%;
        height: 100%;
        position: absolute;
        backface-visibility: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-front {
        background-color: #fff;
    }

    .card-back {
        background-color: lightblue;
        transform: rotateY(180deg);
    }
</style>

<div class="row">
    <div class="col">
        @for (int i = 0; i < 3; i++)
        {
            int currentIndex = i; // Define a local variable to capture the current index

            <div class="card">
                <div class="card-inner">
                    <div class="card-front">
                        Card @i
                    </div>
                    <div class="card-back">
                        Hovered!
                    </div>
                </div>
            </div>
        }
    </div>
</div>

